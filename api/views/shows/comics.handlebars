<section>
    <br>
    <h2>Comics Api</h2> 
    <br>

  {{#each comics}}
    <div class="card" style="width: 27rem;">
      <img
        class="card-img-top"
        src="{{thumbnail.path}}.{{thumbnail.extension}}"
        alt="Card image cap"
      />
      <div class="card-body">
        <h4 class="card-title">{{title}}</h4>
        <h5 class="card-text">
          {{#if description}}
          description: {{description}}
          {{else}}
            description: N/A
          {{/if}}
        </h5>
      </div>
    </div>
<br>
  {{/each}}
  <br>

  <a href="/"><h3>Back to Home</h3> </a>
</section>